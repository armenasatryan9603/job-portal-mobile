{
  "expo": {
    "name": "job-portal-mobile",
    "slug": "job-portal-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "jobportalmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "deploymentTarget": "17.0",
      "supportsTablet": true,
      "bundleIdentifier": "com.jobportalmobile.app",
      "config": {
        "googleMapsApiKey": "YOUR_IOS_GOOGLE_MAPS_API_KEY"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to show your current location on the map and help you set your profile location.",
        "NSCameraUsageDescription": "This app needs access to camera to take photos and videos for your orders.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to upload images and videos for your orders.",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "package": "com.jobportalmobile.app",
      "googleServicesFile": "./google-services.json",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDUxhIsOrxjjGSZaL62JESW0jeLriHdIT4"
        }
      },
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location to show your current location on the map and help you set your profile location."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to photo library to upload images and videos for your orders.",
          "cameraPermission": "This app needs access to camera to take photos and videos for your orders."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "GOOGLE_SHEETS_API_KEY": "AIzaSyAsvtqOaGbV6E1z-g-5fxc1cnJSW_gWyug"
    }
  }
}
